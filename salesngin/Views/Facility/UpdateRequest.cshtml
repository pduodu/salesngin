@model RequestViewModel
@inject IDataControllerService _dataService
@{
    ViewData["Title"] = "Request Item";
    ViewData["MainMenu"] = "Facility Management";
    ViewData["Page"] = "Request Item";

    var settings = await _dataService.GetSettings();
}

<div class="d-flex flex-column flex-lg-row w-100">

    <div class="d-flex flex-row-fluid me-xl-9 mb-10 mb-xl-0 bg-transparent">
        <div class="card card-flush card-p-0 bg-transparent border-0 w-100">
            <div class="card-header">
                <div class="col fv-row">
                    <div class="d-flex align-items-center position-relative">
                        <i class="ki-duotone ki-magnifier fs-1 position-absolute ms-4 text-primary">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <input id="searchInput" type="text" class="form-control fs-3 ps-12" autocomplete="off" placeholder="Search...">
                        <button id="btnClear" type="button" class="btn btn-primary fs-4 mx-2">
                            Clear
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <div id="productsContainer" class="">
                    @await Html.PartialAsync("Inventory/_FormItemList", Model)
                </div>

            </div>
        </div>
        <!--end::Pos order-->
    </div>


    <div class="flex-row-auto w-xl-500px">
        <div class="card card-flush bg-body ">
            <div class="card-header pt-5">
                <h3 class="card-title fw-bold text-gray-800 fs-3">Request Items</h3>
                <div class="card-toolbar">
                    <a href="javascript:void(0)" onclick="clearCartPartial();" class="btn btn-light-danger fs-4 fw-bold py-3 mx-2">Clear All</a>
                    <a asp-controller="Facility" asp-action="RequestDetails" asp-route-id="@Model.Id" class="btn btn-icon btn-primary me-3">
                        <i class="ki-duotone ki-double-left fs-1">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                    </a>
                </div>
            </div>
            <!--begin::Body-->
            <div class="card-body pt-2">
                <h2 class="card-title fw-bold text-gray-800">Request # : @Model.RequestCode</h2>
                <div id="divCartItemsDisplay">
                    @await Html.PartialAsync("Inventory/_CartItemsPartial", Model.CartItems)
                </div>
                <div class="separator separator-dotted border-primary my-10"></div>
                <form id="formUpdateRequest" asp-controller="Facility" asp-action="UpdateRequest" asp-route-id="@Model.Id" method="post" class="form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Status" value="@Model.Status" />
                    @{
                        <div class="mb-10 fv-row">
                            <label class="form-label fs-6 fw-semibold">Purpose:</label>
                            @if (Model.Status == RequestStatus.New)
                            {
                                <textarea rows="3" asp-for="@Model.Purpose" type="" class="form-control mb-2" placeholder="" value="@Model.Purpose"></textarea>
                            }
                            else
                            {
                                <div class="form-control fs-6 fw-semibold">@Model.Purpose</div>
                            }
                            <div class="text-muted fs-7"></div>
                        </div>
                        <div class="mb-10 fv-row">
                            <label class="form-label fs-6 fw-semibold">Remarks:</label>
                            @if (Model.ModulePermission.Configure && Model.Status == RequestStatus.New)
                            {
                                <textarea rows="3" asp-for="@Model.Remarks" type="" class="form-control mb-2" placeholder="" value=""></textarea>
                            }
                            else
                            {
                                <div class="form-control fs-6 fw-semibold">@Html.Raw(Model.Remarks)</div>
                            }
                            <div class="text-muted fs-7"></div>
                        </div>
                    }
                    <div class="m-0 g-5">
                        <button type="submit" class="btn btn-primary fs-3 w-100 py-4 mx-3 ">
                            <i class="ki-duotone ki-mouse-square fs-2x">
                                <span class="path1"></span>
                                <span class="path2"></span>
                            </i>
                            Update Request
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<!-- modal placeholders-->
<div id="modal-add" tabindex="-1" class=" modal fade">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">

            <div id='modal-add-content'></div>

        </div>
    </div>
</div>

