                            data: { id: productId, ot: orderType },
                            success: function (result) {
                                console.log('Product added to cart : ', productName);
                                searchInputField.value = ''; // Clear the search input
                                searchInputField.focus();
                                $("#divCartItemsDisplay").html(result);
                            }
                        });
                    }
                });
            }
        }

