@model ForgotPasswordViewModel
@inject IDataControllerService _dataService
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Forgot Password";

    var company = await _dataService.GetCompany();
}

<!--begin::Wrapper-->
<div class="w-lg-500px p-10">
    <!--begin::Form-->
    <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="form w-100" id="password_reset_form">
        <!--begin::Heading-->
        <div class="text-center mb-10">

            <a asp-action="Login" asp-controller="Account" class="mb-0 mb-lg-12">
                <img alt="Logo" src="@Url.Content(company.CompanyLogoPath)" class="mb-5 col-3" />
            </a>


            <!--begin::Title-->
            <h1 class="text-dark fw-bolder mb-3">
                Forgot Password ?
            </h1>
            <!--end::Title-->
            <!--begin::Link-->
            <div class="text-gray-500 fw-semibold fs-6">
                Enter your email to reset your password.
            </div>
            <!--end::Link-->
        </div>
        <!--begin::Heading-->
        <!--begin::Input group--->
        <div class="fv-row mb-8">
            <!--begin::Email-->
            <input asp-for="Email" type="text" placeholder="Email" name="email" autocomplete="off" class="form-control bg-transparent" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <!--end::Email-->
        </div>

        <!--begin::Actions-->
        <div class="d-flex flex-wrap justify-content-center pb-lg-0">
            <button type="submit" id="reset_submit" class="btn btn-primary me-4">

                <!--begin::Indicator label-->
                <span class="indicator-label">
                    Submit
                </span>
                <!--end::Indicator label-->
                <!--begin::Indicator progress-->
                <span class="indicator-progress">
                    Please wait...    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
                <!--end::Indicator progress-->
            </button>

            <a asp-action="Login" asp-controller="Account" class="btn btn-light">Cancel</a>
        </div>
        <!--end::Actions-->
    </form>
    <!--end::Form-->
</div>
<!--end::Wrapper-->
