@model salesngin.ViewModels.ExpenseCategoryViewModel

<form asp-action="Create" asp-controller="ExpenseCategory" method="post" id="ExpenseCategoryForm">

    <div class="modal-header">
        <h3 class="modal-title">Add Expense Category</h3>
        <div class="btn btn-icon btn-sm btn-active-light-danger ms-2"
             data-bs-dismiss="modal" aria-label="Close">
            <i class="ki-duotone ki-cross fs-1"></i>
        </div>
    </div>

    <div class="modal-body py-5">

        <div class="mb-5">
            <label asp-for="Name" class="form-label required">Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="e.g. Electricity, Water, Transport" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-5">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        </div>

        <div class="mb-5">
            <label class="form-label">Status</label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>

        @if (Model.ModulePermission?.Create == true)
        {
            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
