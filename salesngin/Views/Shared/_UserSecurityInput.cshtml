@model UserViewModel

<div class="card pt-4 mb-6 mb-xl-9">
    <div class="card-header border-0">
        <div class="card-title">
            <h2> Password Reset</h2>
        </div>
    </div>
    <div class="card-body pt-0 pb-5">
        <form class="form" id="formSecurity" asp-controller="Account" asp-action="ResetUserPassword">
            <input id="UserId_security" type="hidden" asp-for="@Model.UserId" />
            <div class="mb-5 fv-row" data-kt-password-meter="true">
                <div class="mb-1">
                    <label class="form-label fw-bold fs-6 mb-2"><span class="">New Password<i class="fa fa-asterisk px-2 text-danger"></i></span></label>
                    <div class="position-relative mb-3">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="" autocomplete="off" />
                        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                            <i class="bi bi-eye-slash fs-2"></i>
                            <i class="bi bi-eye fs-2 d-none"></i>
                        </span>
                    </div>
                    <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                    </div>
                </div>
                <div class="text-muted">Use 8 or more characters with a mix of letters, numbers &amp; symbols.</div>
            </div>
            <div class="fv-row mb-5">
                <label class="form-label fw-bold fs-6 mb-2"><span class="">Confirm New Password<i class="fa fa-asterisk px-2 text-danger"></i></span></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="" autocomplete="off" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="separator separator-dashed my-5"></div>
            <div class="text-gray-600 float-end">
                <button type="submit" id="resendConfirmEmail_submit" form="formResendConfirmEmail" class="btn btn-lg btn-light-primary me-3" onclick="return confirmDialog('formResendConfirmEmail', this)">
                    <span class="indicator-label">
                        Resend Confirm Email
                    </span>
                </button>
                <button type="submit" id="security_submit" form="formSecurity" class="btn btn-lg btn-primary me-3" onclick="return confirmDialog('formSecurity', this)">
                    <span class="indicator-label">
                        Reset Password
                    </span>
                </button>
            </div>
        </form>

        <form class="form" id="formResendConfirmEmail" asp-controller="Account" asp-action="ResendConfirmationEmail" asp-route-email="@Model.Email">

        </form>
    </div>
</div>
