                    <!--begin::Left Section-->
                    <div class="d-flex flex-wrap flex-stack mb-5">
                        <!--begin::Row-->
                        <div class="d-flex flex-wrap">
                            <!--begin::Col-->
                            <div class="border border-dashed border-gray-300 w-125px rounded my-3 p-4 me-6">
