                                <span class="fs-6 fw-semibold text-muted d-block lh-1 pt-2">Open</span>
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="border border-dashed border-gray-300 w-125px rounded my-3 p-4 me-6">
                                <span class="fs-2 fw-bold text-gray-800 lh-1">
                                    <span class="pulse pulse-warning">
                                        <span class="pulse-ring"></span>
                                        <i class="ki-duotone ki-black-right-line text-warning fs-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    </span>
                                    <span data-kt-countup="true" data-kt-countup-value="@Model.CompletedVoluntary" data-kt-countup-prefix="" class="" data-kt-initialized="1">@Model.CompletedVoluntary</span>
