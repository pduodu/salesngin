                            <div class="border border-dashed border-gray-300 w-125px rounded my-3 p-4 me-6">
                                <span class="fs-2 fw-bold text-gray-800 lh-1">
                                    <i class="ki-duotone ki-black-right-line text-success fs-3">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                    <span class="" data-kt-countup="true" data-kt-countup-value="@Model.ClosedVoluntary" data-kt-countup-prefix="" data-kt-initialized="1">@Model.ClosedVoluntary</span>
                                </span>
                                <span class="fs-6 fw-semibold text-muted d-block lh-1 pt-2">Closed</span>
                            </div>
                            <!--end::Col % -->
                        </div>
                        <!--end::Row-->
                        <a asp-controller="Occurrence" asp-action="Voluntary" class="btn btn-sm btn-light-primary flex-shrink-0">View</a>
                    </div>
                    <!--end::Left Section-->
                </div>
                <!--end::Body-->
            </div>
        </a>
    </div>
</div>

