@inject SignInManager<ApplicationUser> _signInManager
@inject UserManager<ApplicationUser> _userManager
@inject IDataControllerService _dataService
@inject IConfiguration _configuration
@{
    // string ordersFilter = string.Empty;
    var company = await _dataService.GetCompany();
    string applicationName = _configuration["ApplicationName"];
    string applicationShortName = _configuration["ApplicationShortName"];
}


<!--begin::Header-->
<div id="kt_app_header" class="app-header"
     data-kt-sticky="true" data-kt-sticky-activate="{default: false, lg: true}" data-kt-sticky-name="app-header-sticky" data-kt-sticky-offset="{default: false, lg: '300px'}">

    <!--begin::Header container-->
    <div class="app-container  container-xxl d-flex align-items-stretch justify-content-between " id="kt_app_header_container">

        <!--begin::Header mobile toggle-->
        <div class="d-flex align-items-center d-lg-none ms-n2 me-2" title="Show sidebar menu">
            <div class="btn btn-icon btn-active-color-primary w-35px h-35px" id="kt_app_header_menu_toggle">
                <i class="ki-duotone ki-abstract-14 fs-2 text-white"></i>
            </div>
        </div>
        <!--end::Header mobile toggle-->
        <!--begin::logo-->
        <div class="d-flex align-items-center flex-grow-1 flex-lg-grow-0 me-lg-15" >
            <a asp-controller="Home" asp-action="Index" class="text-white">
                <img alt="Logo" src="@Url.Content(company.CompanyLogoPath)" class="h-45px" />
                <span class="fs-2 fw-semibold mx-3">@applicationName </span>
            </a>
        </div>
        <!--end::logo-->
        <!--begin::Header wrapper-->
        <div class="d-flex align-items-stretch justify-content-between flex-lg-grow-1" id="kt_app_header_wrapper">
            <!--begin::Menu wrapper-->
            <div class="app-header-menu app-header-mobile-drawer align-items-stretch"
                 data-kt-drawer="true"
                 data-kt-drawer-name="app-header-menu"
                 data-kt-drawer-activate="{default: true, lg: false}"
                 data-kt-drawer-overlay="true"
                 data-kt-drawer-width="250px"
                 data-kt-drawer-direction="start"
                 data-kt-drawer-toggle="#kt_app_header_menu_toggle"
                 data-kt-swapper="true"
                 data-kt-swapper-mode="{default: 'append', lg: 'prepend'}"
                 data-kt-swapper-parent="{default: '#kt_app_body', lg: '#kt_app_header_wrapper'}">
            </div>
            <!--begin::Menu wrapper-->
            <!--begin::Navbar-->
            <div class="app-navbar flex-shrink-0">
                <!--begin::Theme mode-->
                <div class="app-navbar-item ms-1 ms-md-4">

                    <!--begin::Menu toggle-->
                    <a href="#"
                       class="btn btn-icon btn-custom btn-active-light btn-active-color-primary w-35px h-35px"
                       data-kt-menu-trigger="{default:'click', lg: 'hover'}" data-kt-menu-attach="parent"
                       data-kt-menu-placement="bottom-end">
                        <i class="ki-duotone ki-night-day text-warning fs-2x">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                            <span class="path4"></span>
                            <span class="path5"></span>
                            <span class="path6"></span>
                            <span class="path7"></span>
                            <span class="path8"></span>
                            <span class="path9"></span>
                            <span class="path10"></span>
                        </i> 
                        <i class="ki-duotone ki-moon theme-dark-show fs-1">
                            <span class="path1"></span><span class="path2"></span>
                        </i>
                    </a>
                    <!--begin::Menu toggle-->
                    <!--begin::Menu-->
                    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-title-gray-700 menu-icon-gray-500 menu-active-bg menu-state-color fw-semibold py-4 fs-base w-150px"
                         data-kt-menu="true" data-kt-element="theme-mode-menu">
                        <!--begin::Menu item-->
                        <div class="menu-item px-3 my-0">
                            <a href="#" class="menu-link px-3 py-2" data-kt-element="mode" data-kt-value="light">
                                <span class="menu-icon" data-kt-element="icon">
                                    <i class="ki-duotone ki-night-day fs-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                        <span class="path4"></span>
                                        <span class="path5"></span>
                                        <span class="path6"></span>
                                        <span class="path7"></span>
                                        <span class="path8"></span>
                                        <span class="path9"></span>
                                        <span class="path10"></span>
                                    </i>
                                </span>
                                <span class="menu-title">
                                    Light
                                </span>
                            </a>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu item-->
                        <div class="menu-item px-3 my-0">
                            <a href="#" class="menu-link px-3 py-2" data-kt-element="mode"
                               data-kt-value="dark">
                                <span class="menu-icon" data-kt-element="icon">
                                    <i class="ki-duotone ki-moon fs-2">
                                        <span class="path1"></span><span class="path2"></span>
                                    </i>
                                </span>
                                <span class="menu-title">
                                    Dark
                                </span>
                            </a>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu item-->
                        <div class="menu-item px-3 my-0">
                            <a href="#" class="menu-link px-3 py-2" data-kt-element="mode"
                               data-kt-value="system">
                                <span class="menu-icon" data-kt-element="icon">
                                    <i class="ki-duotone ki-screen fs-2">
                                        <span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span>
                                    </i>
                                </span>
                                <span class="menu-title">
                                    System
                                </span>
                            </a>
                        </div>
                        <!--end::Menu item-->
                    </div>
                    <!--end::Menu-->

                </div>
                <!--end::Theme mode-->
                <!--begin::User menu-->
                @{
                    @if (_signInManager.IsSignedIn(User))
                    {
                        var loggedInUser = await _userManager.GetUserAsync(User);
                        var userPhoto = loggedInUser.UserPhotoPath;
                        var firstLastName = $"{loggedInUser.FirstName} {loggedInUser.LastName}";


                        <div class="app-navbar-item ms-1 ms-md-4" id="kt_header_user_menu_toggle">
                            <!--begin::Menu wrapper-->
                            <div class="cursor-pointer symbol symbol-35px"
                                 data-kt-menu-trigger="{default: 'click', lg: 'hover'}"
                                 data-kt-menu-attach="parent"
                                 data-kt-menu-placement="bottom-end">
                                @*<img src="assets/media/avatars/300-3.jpg" class="rounded-3" alt="user" />*@
                                <div class="d-flex align-items-center px-3">
                                    <!--begin::Avatar-->
                                    <div class="symbol symbol-45px me-5">
                                        <img alt="Logo" src="@Url.Content(loggedInUser.UserPhotoPath)" />
                                    </div>
                                    <!--end::Avatar-->
                                    <!--begin::Username-->
                                    <div class="d-flex flex-column">
                                        <div class="fw-bold d-flex align-items-center text-white fs-4">
                                            @firstLastName <span class="badge badge-light-success fw-bold fs-8 px-2 py-1 ms-2"></span>
                                        </div>

                                        <a href="#" class="fw-semibold text-muted text-hover-primary fs-6">
                                            @loggedInUser.Email
                                        </a>
                                    </div>
                                    <!--end::Username-->
                                </div>
                            </div>

                            <!--begin::User account menu-->
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-color fw-semibold py-4 fs-6 w-275px"
                                 data-kt-menu="true">
                                <!--begin::Menu separator-->
                                <div class="separator my-2"></div>
                                <!--end::Menu separator-->
                                <!--begin::Menu item-->
                                <div class="menu-item px-5">
                                    <a asp-action="Profile" asp-controller="Account" asp-route-id="@loggedInUser.Id" class="menu-link px-5 fs-4">
                                        My Profile
                                    </a>
                                </div>
                                <!--end::Menu item-->
                                <!--begin::Menu separator-->
                                <div class="separator my-2"></div>
                                <!--end::Menu separator-->
                                <!--begin::Menu item-->
                                <div class="menu-item px-5">
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-flex flex-center btn-custom btn-primary overflow-hidden text-nowrap px-0 h-40px w-100">
                                            <span class="btn-label mr-3 fs-4">Sign Out</span>
                                            <span class="menu-icon">
                                                <i class="ki-duotone ki-exit-right fs-3x">
                                                    <i class="path1"></i>
                                                    <i class="path2"></i>
                                                </i>
                                            </span>
                                        </button>
                                    </form>
                                </div>
                                <!--end::Menu item-->
                            </div>
                            <!--end::User account menu-->
                            <!--end::Menu wrapper-->
                        </div>
                    }
                    else
                    {
                        <div class="app-navbar-item ms-1 ms-lg-5">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-icon btn-color-white w-100px h-35px w-md-100px h-md-40px position-relative" id="kt_login_button">
                                <i class="ki-duotone ki-entrance-left fs-2qx mx-2">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                                <span class="fs-4">Sign in</span>
                            </a>
                        </div>
                    }
                }
                <!--end::User menu-->
            </div>
            <!--end::Navbar-->
        </div>
        <!--end::Header wrapper-->
    </div>
    <!--end::Header container-->

</div>
<!--end::Header-->
@section Scripts {



}