@model ExpenseViewModel

<div class="card mb-5 mb-xl-10">
    <div class="card-body p-9">

        <div class="row mb-6">
            <label class="col-lg-4 col-form-label fw-bold fs-6">Category</label>
            <div class="col-lg-8">
                <select asp-for="CategoryId" asp-items="Model.CategorySelectList" class="form-select types-select">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-6">
            <label class="col-lg-4 col-form-label fw-bold fs-6">Amount</label>
            <div class="col-lg-8">
                <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-6">
            <label class="col-lg-4 col-form-label fw-bold fs-6">Date Incurred</label>
            <div class="col-lg-8">
                <input asp-for="DateIncurred" type="date" class="form-control" />
                <span asp-validation-for="DateIncurred" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-6">
            <label class="col-lg-4 col-form-label fw-bold fs-6">Description</label>
            <div class="col-lg-8">
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-6">
            <label class="col-lg-4 col-form-label fw-bold fs-6">Attachment</label>
            <div class="col-lg-8">
                <input asp-for="Attachment" type="file" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ExistingAttachmentPath))
                {
                    <div class="mt-3">
                        <a href="@Url.Content(Model.ExistingAttachmentPath)" target="_blank" class="btn btn-light-primary btn-sm">
                            View Existing File
                        </a>
                    </div>
                }
                <span asp-validation-for="Attachment" class="text-danger"></span>
            </div>
        </div>

    </div>
</div>
