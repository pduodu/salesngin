@model UserViewModel

<div class="card pt-4 mb-6 mb-xl-9">
    <div class="card-header border-0">
        <div class="card-title">
            <h2> Contact Info</h2>
        </div>
    </div>
    <div class="card-body pt-0 pb-5">
        <form class="form" id="formContact" asp-controller="Account" asp-action="UpdateContactInfo">
            <input type="hidden" asp-for="@Model.UserId" />
            <div class="row mb-4">
                <label class="col-lg-4 col-form-label fw-bold fs-6">
                    <span class="required"> Phone Number</span>
                    <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="" data-bs-original-title="Phone number must be active" aria-label="Phone number must be active"></i>
                </label>
                <div class="col-lg-8 fv-row fv-plugins-icon-container">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Phone number">
                    <div class="fv-plugins-message-container invalid-feedback"></div>
                </div>
            </div>
             <div class="row mb-4">
                <label class="col-lg-4 col-form-label fw-bold fs-6">
                    <span class="required"> Email</span>
                    <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="" data-bs-original-title="Email must be valid" aria-label="Email must be valid"></i>
                </label>
                <div class="col-lg-8 fv-row fv-plugins-icon-container">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                    <div class="fv-plugins-message-container invalid-feedback"></div>
                </div>
            </div>
            <div class="separator separator-dashed my-5"></div>
            <div class="text-gray-600 float-end">
                <button type="submit" id="contact_submit" form="formContact" class="btn btn-lg btn-primary me-3" onclick="return confirmDialog('formContact', this)">
                    <span class="indicator-label">
                        Save
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>

