@model string
@{
    if (@Model == StockStatus.Available)
    {
        <span class="badge badge-light-success fw-bold fs-6 px-4 py-3">
            @StockStatus.Available
        </span>

    }
    else if (@Model == StockStatus.LowStock)
    {
        <span class="badge badge-light-warning fw-bold fs-6 px-4 py-3">
            @StockStatus.LowStock
        </span>
    }
    else if (@Model == StockStatus.OutOfStock)
    {
        <span class="badge badge-light-danger fw-bold fs-6 px-4 py-3">
            @StockStatus.OutOfStock
        </span>
    }
    else
    {
        <span class="badge badge-light-primary fw-bold fs-6 px-4 py-3">...</span>
    }
}