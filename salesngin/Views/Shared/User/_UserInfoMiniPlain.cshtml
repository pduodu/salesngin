@model ApplicationUser

@{
    if (Model != null)
    {
        <div class="d-flex flex-stack rounded-3 border border-1 border-dashed border-gray-400">
            <div class="d-flex align-items-center p-2">
                <div class="symbol  symbol-30px symbol-circle ">
                    <img alt="Pic" src="@Url.Content(@Model.UserPhotoPath)">
                </div>
                <div class="ms-4">
                    <div class="fs-6 fw-semibold text-gray-900 pb-1">@Model.FullName</div>
                </div>
            </div>
        </div>
    }
    else
    {
        var userPhoto = $"/{FileStorePath.noUserPhotoPath}?c=" + DateTime.UtcNow;
        // <div class="col align-content-center">
        //     <div class="info-box">
