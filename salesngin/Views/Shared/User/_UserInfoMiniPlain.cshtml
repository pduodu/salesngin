        //         <div class="info-box-content">
        //             <span class="info-box-text"><b class="fs-5">None</b></span>
        //         </div>
        //     </div>
        // </div>
        <div class="d-flex flex-stack rounded-3">
            <div class="d-flex align-items-center p-3">
                <div class="symbol  symbol-30px symbol-circle ">
                    <img alt="Pic" src="@Url.Content(@userPhoto)">
                </div>
                <div class="ms-4">
                    <div class="fs-6 fw-semibold text-gray-900 pb-1">None</div>
                </div>
            </div>
        </div>

    }
}
