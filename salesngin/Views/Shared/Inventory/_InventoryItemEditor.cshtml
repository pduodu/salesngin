@model ItemViewModel
@{

    <div class="fv-row mb-5 mt-10" id="stockManagementContainer">
        <div class="row mt-5 g-5">
            <div class="col">
                <label class="form-label">Units per Pack (Pcs)</label>
                <input asp-for="@Model.UnitsPerPack" type="number" class="form-control mb-2" placeholder="0" />
            </div>
            @{
                if (Model.InventoryItem == null)
                {
                    <div class="col">
                        <label class="form-label">Quantity Available (Pcs)</label>
                        <input asp-for="@Model.Quantity" type="number" class="form-control mb-2" placeholder="0" />
                    </div>
                }
                else
                {
                    <div class="col">
                        <label class="form-label">Quantity Available (Pcs)</label>
                        <label class="form-control form-control-solid mb-2">@Model.Quantity</label>
                    </div>
                }
                // <div class="col">
                //     <label class="form-label">Units per Carton (Pieces)</label>
                //     <input asp-for="@Model.UnitsPerCarton" type="number" class="form-control mb-2" placeholder="0" />
                // </div>
                <div class="col">
                    <label class="form-label">Restock Alert Quantity (Pcs)</label>
                    <input asp-for="@Model.RestockLevel" type="number" class="form-control mb-2" placeholder="0" />
                </div>
            }
        </div>
        @{
            if (Model.InventoryItem != null)
            {
                <div class="row mt-5 g-5">
                    <div class="col">
                        <label class="form-label">Current Stock Summary : @Model.InventoryItem?.StockQuantitySummary</label>
                        <label class="form-label">Retail Profit : @Model.InventoryItem?.RetailProfit</label>
                        <label class="form-label">Total Retail Profit : @Model.InventoryItem?.TotalRetailProfit</label>
                        <label class="form-label">Wholesale Profit : @Model.InventoryItem?.WholesaleProfit</label>
                        <label class="form-label">Total Wholesale Profit : @Model.InventoryItem?.TotalWholesaleProfit</label>
                        <label class="form-label">Stock value at Cost : @Model.InventoryItem?.StockValueAtCost</label>
                        <label class="form-label">Stock value at Retail : @Model.InventoryItem?.StockValueAtRetail</label>
                        <label class="form-label">Stock value at Wholesale : @Model.InventoryItem?.StockValueAtWholesale</label>
                    </div>
                </div>
            }
        }
        <div class="row mt-5 g-5">
