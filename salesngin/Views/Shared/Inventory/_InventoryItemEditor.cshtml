                <div class="col">
                    <label class="form-label">Cost Price</label>
                    <input asp-for="@Model.CostPrice" type="number" class="form-control mb-2" placeholder="0.00" min="0.00"
                        max="9999999999999999.99" step="0.01" />
                </div>
                <div class="col">
                    <label class="form-label">Retail Price</label>
                    <input asp-for="@Model.RetailPrice" type="number" class="form-control mb-2" placeholder="0.00" min="0.00"
                        max="9999999999999999.99" step="0.01" />
                </div>
                <div class="col">
                    <label class="form-label">Wholesale Price</label>
                    <input asp-for="@Model.WholesalePrice" type="number" class="form-control mb-2" placeholder="0.00" min="0.00"
