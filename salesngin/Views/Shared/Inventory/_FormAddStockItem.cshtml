@model CartItem

    <div class="modal-body">
        <div class="row mb-3">
            <div class="col fv-row">
                <input asp-for="@Model.ItemId" type="hidden" value="@Model.ItemId" />
                <div class="text-center">
                    <img src="@Url.Content(Model.ItemPhoto)" class="w-150px h-150px rounded-3 me-3" alt="">
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col fv-row text-center">
                <span class="fw-bold text-gray-800 fs-5 me-1">@Model.ItemName</span>
            </div>
        </div>
        <div class="separator separator-dotted border-primary my-10"></div>
        <div class="row mb-3">
            <div class="col fv-row">
                <label class="fs-5 fw-bolder form-label mb-2">Quantity</label>
                <input asp-for="@Model.Quantity" class="form-control form-control-solid fs-4" placeholder="" min="1" max="100000" value="@Model.Quantity" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="addItemToCartForm();" data-bs-dismiss="modal">Add</button>
        @* <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Add</button> *@
    </div>