@model string


@{
    if (@Model == OrderStatus.New)
    {
        <span class="badge badge-light-primary fw-bold fs-6 px-4 py-3 pulse pulse-primary">
            <span class="pulse-ring"></span>
            <i class="ki-duotone ki-notification-on fs-2x mx-2 text-primary"><i class="path1"></i><i class="path2"></i><i class="path3"></i><i class="path4"></i><i class="path5"></i></i>
            @OrderStatus.New
        </span>

    }
    else if (@Model == OrderStatus.Preparing)
    {
        <span class="badge badge-light-warning fw-bold fs-6 px-4 py-3 pulse pulse-warning">
            <span class="pulse-ring"></span>
            <i class="ki-duotone ki-notification-on fs-2x mx-2 text-warning"><i class="path1"></i><i class="path2"></i><i class="path3"></i><i class="path4"></i><i class="path5"></i></i>
            @OrderStatus.Preparing
        </span>
    }
    else if (@Model == OrderStatus.Cancelled)
    {
        <span class="badge badge-light-danger fw-bold fs-6 px-4 py-3">
            <i class="ki-duotone ki-notification-on fs-2x mx-2 text-danger"><i class="path1"></i><i class="path2"></i><i class="path3"></i><i class="path4"></i><i class="path5"></i></i>
            @OrderStatus.Cancelled
        </span>
    }
    else if (@Model == OrderStatus.Ready)
    {
        <span class="badge badge-light-primary fw-bold fs-6 px-4 py-3 pulse pulse-primary">
            <span class="pulse-ring"></span>
            <i class="ki-duotone ki-notification-on fs-2x mx-2 text-primary"><i class="path1"></i><i class="path2"></i><i class="path3"></i><i class="path4"></i><i class="path5"></i></i>
            @OrderStatus.Ready
        </span>
    }
    else if (@Model == OrderStatus.Hold)
    {
        <span class="badge badge-light-info fw-bold fs-6 px-4 py-3 pulse pulse-info">
            <span class="pulse-ring"></span>
            <i class="ki-duotone ki-notification-on fs-2x mx-2 text-info">
                <i class="path1"></i>
                <i class="path2"></i>
                <i class="path3"></i>
                <i class="path4"></i>
                <i class="path5"></i>
            </i>
            @OrderStatus.Hold
        </span>
    }
    else if (@Model == OrderStatus.Delivered)
    {
        <span class="badge badge-light-success fw-bold fs-6 px-4 py-3">
            <i class="ki-duotone ki-user-tick fs-2x mx-2 text-success"><i class="path1"></i><i class="path2"></i><i class="path3"></i></i>
            @OrderStatus.Delivered
        </span>

    }
    else
    {
        <span class="badge badge-light-success fw-bold fs-6 px-4 py-3">Pending</span>
    }
    // "New"; //Blue
    // "Preparing"; //Yellow
    // "Cancelled"; //Red
    // "Ready"; //Green
}