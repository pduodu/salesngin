    <!-- Add session timeout warning script here -->
    <script>
        // Set the session timeout duration (same as your session setup in C#)
        const sessionTimeout = 30 * 60 * 1000; // 30 minutes
        const alertBeforeTimeout = 2 * 60 * 1000; // 2 minutes before timeout

        let timeoutWarning;
        let timeoutLogout;

        function showSessionAlert() {
            //alert("Your session will expire in 2 minutes. Please save your work or click anywhere to extend your session.");
            toast_message("error","Your session will expire in 2 minutes. Please save your work or click anywhere to extend your session.","Session Info");
        }

        function extendSession() {
            // This function can optionally make an AJAX call to keep the session alive
            console.log("Session extended.");
            //toast_message("success","Session extended","Session Info");
        }

        function startSessionTimers() {
            timeoutWarning = setTimeout(showSessionAlert, sessionTimeout - alertBeforeTimeout);
            timeoutLogout = setTimeout(() => {
                //alert("Your session has expired. You will be logged out.");
                toast_message("warning","Your session has expired. You will be logged out.","Session Info");
                window.location.href = '@Url.Action("Login", "Account")'; // Redirect to Logout action
            }, sessionTimeout);
        }

        // Reset session timers on any user activity (click, keypress, etc.)
        document.addEventListener("click", function () {
            clearTimeout(timeoutWarning);
            clearTimeout(timeoutLogout);
            extendSession();
            startSessionTimers();
        });

        // Start timers when the page loads
        window.onload = function () {
            startSessionTimers();
        };

    </script>

