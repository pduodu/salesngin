@model UserViewModel
@{
    //pt-4 mb-6 mb-xl-9 w-300px
}
<div class="card">
    <div class="card-body pt-0 pb-5">
        <form class="form" id="formUserPhoto" asp-controller="Account" asp-action="UpdateUserPhoto" method="post" enctype="multipart/form-data">
            <input id="UserId_photo" type="hidden" asp-for="@Model.UserId" />
            <div class="w-100">
                <div class="pt-4 pb-2">
                    <h5 class="fw-bolder text-dark">Photo</h5>
                    <div class="text-muted fw-semibold fs-7">
                        Upload passport sized photo of user.
                    </div>
                </div>
                <div class="separator separator-dashed my-2"></div>
                <div class="mb-0">
                    <div class="row mb-6">
                        @* <label class="col-lg-4 col-form-label fw-bold fs-6"></label> *@
                        <div class="col-lg-8">
                            <div class="image-input image-input-outline" data-kt-image-input="true" style="background-image: url('@Url.Content(Model.User?.UserPhotoPath) ')">
                                <div class="image-input-wrapper" src="defaultImage" style="background-image: url('@Url.Content(Model.User?.UserPhotoPath)'); width:150px !important; height:150px !important;"></div>
                                <label class="btn btn-icon btn-circle btn-active-color-primary w-35px h-35px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Change Photo">
                                    <i class="ki-duotone ki-plus-circle fs-2x">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                    <input type="file" asp-for="Photo" accept=".png, .jpg, .jpeg" />
                                    <input type="hidden" name="avatar_remove" />
                                </label>
                                <span class="btn btn-icon btn-circle btn-active-color-danger w-35px h-35px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="Cancel Photo">
                                    <i class="ki-duotone ki-cross-circle fs-2x">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </span>
                                <span class="btn btn-icon btn-circle btn-active-color-danger w-35px h-35px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" title="Remove Photo">
                                    <i class="ki-duotone ki-cross-circle fs-2x">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </span>
                            </div>
                            <div class="form-text">Allowed file types: png, jpg, jpeg.</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator separator-dashed my-2"></div>
            <div class="text-gray-600 float-end">
                <button type="submit" id="photo_submit" form="formUserPhoto" class="btn btn-primary me-3" onclick="return confirmDialog('formUserPhoto', this)">
                    <span class="indicator-label">
                        Save
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>

